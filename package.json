{
  "name": "daruk",
  "version": "0.6.1",
  "description": "a node.js web framework",
  "main": "build/index.js",
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "rimraf -rf ./build && tsc",
    "build:watch": "rimraf -rf ./build && tsc && gulp build:watch",
    "cov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "cross-env TS_NODE_FILES=true nyc --reporter=lcov --reporter=text-summary --cache mocha --timeout 15000 --exit ./test/{,/**/}*.test.ts",
    "tslint": "tslint --project . ./src/**/*.ts",
    "prepublish": "npm run build"
  },
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:darukjs/daruk.git"
  },
  "keywords": [
    "framework"
  ],
  "author": {
    "name": "xiaojue",
    "email": "designsor@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/travis-cli": "^7.6.1",
    "@types/basic-auth": "^1.1.2",
    "@types/chai": "^4.1.7",
    "@types/convert-hrtime": "^2.0.0",
    "@types/expect": "^1.20.3",
    "@types/is": "^0.0.21",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "@types/url-join": "^4.0.0",
    "all-contributors-cli": "^6.3.1",
    "chai": "^4.1.2",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "gulp": "^4.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.0",
    "supertest": "^3.3.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.12.1",
    "tslint-config-alloy": "^0.2.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@types/cron": "^1.7.1",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.37",
    "@types/node": "^10.12.18",
    "chalk": "^2.4.1",
    "convert-hrtime": "^2.0.0",
    "cron": "^1.7.1",
    "daruk-exit-hook": "^0.3.0",
    "daruk-logger": "^1.10.0",
    "daruk-request-id": "^0.4.3",
    "htmlspecialchars": "^1.0.5",
    "http-server-shutdown": "^1.1.2",
    "is": "^3.3.0",
    "koa": "^2.5.2",
    "koa-body": "^4.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.13",
    "mixin-deep": "^2.0.1",
    "object-assign-deep": "^0.4.0",
    "reflect-metadata": "^0.1.13",
    "upath": "^1.1.2",
    "url-join": "^4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/typings/*"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "types",
    "build",
    "LICENSE"
  ]
}
